<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="travelcrm">

    <tal:block metal:define-macro="index">
        <div class="easyui-panel _container unselectable"
            data-options="fit:true,border:false,iconCls:'fa fa-table'"
            title="Groups"
            i18n:attributes="title"
            tal:define="
                url request.resource_url(context, 'list');
                uuid h.get_oid();
                id_datagrid uuid;
                id_datagrid_toolbar '{uuid}-toolbar'.format(uuid=uuid)">
            <table class="easyui-datagrid"
                tal:attributes="url url; id id_datagrid"
                data-options="
                    border:false,pagination:true,fit:true,pageSize:50,singleSelect:true,
                    rownumbers:true,sortName:'rid',sortOrder:'desc',
                    pageList:[50,100,500],idField:'_rid',checkOnSelect:false,
                    selectOnCheck:false,toolbar:'#${id_datagrid_toolbar}'
                " width="100%">
                <thead>
                    <th data-options="field:'_rid',checkbox:true" i18n:translate="">rid</th>
                    <th data-options="field:'rid',sortable:true,width:60" i18n:translate="">rid</th>
                    <th data-options="field:'group.name',sortable:true,width:240" i18n:translate="">name</th>
                    <th data-options="field:'status',width:50,formatter:function(value,row,index){return datagrid_resource_status_format(value);},styler:function(){return datagrid_resource_cell_styler();}"><strong i18n:translate="">status</strong></th>
                    <th data-options="field:'modifydt',sortable:true,width:120,styler:function(){return datagrid_resource_cell_styler();}"><strong i18n:translate="">updated</strong></th>
                    <th data-options="field:'owner',width:100,styler:function(){return datagrid_resource_cell_styler();}"><strong i18n:translate="">owner</strong></th>
                </thead>
            </table>

            <div class="datagrid-toolbar"
                tal:attributes="id id_datagrid_toolbar">
                <div class="actions button-container">
                    <a href="#" class="button primary _dialog_open" tal:attributes="data-url request.resource_url(context, 'group', 'add')"><span class="fa fa-plus"></span> <span  i18n:translate="">Add New</span></a>
                    <div class="button-group">
                        <a href="#" class="button _dialog_open _with_row" tal:attributes="data-url request.resource_url(context, 'group', 'edit')"><span class="fa fa-pencil"></span> <span  i18n:translate="">Edit</span></a>
                        <a href="#" class="button _dialog_open _with_row" tal:attributes="data-url request.resource_url(context, 'group', 'permissions')"><span class="fa fa-lock"></span> <span  i18n:translate="">Permissions</span></a>
                        <a href="#" class="button danger _dialog_open _with_rows" tal:attributes="data-url request.resource_url(context, 'delete')"><span class="fa fa-times"></span> <span  i18n:translate="">Delete</span></a>
                    </div>
                </div>
            </div>

        </div>
    </tal:block>

    <tal:block metal:define-macro="form">
        <div class="dl40 easyui-dialog"
            title="Add Group"
            tal:attributes="title title | default"
            i18n:attributes="title"
            data-options="modal:true,draggable:false,resizable:false,iconCls:'fa fa-pencil-square-o'">
            <form class="_ajax" tal:attributes="action request.url" method="post" autocomplete="off">
                <div class="form-field">
                    <div class="dl15">
                        <label class="required" i18n:translate="" for="name">name</label>
                    </div>
                    <div class="ml15">
                        <input type="text" name="name" class="text w20" value="" id="name"/>
                    </div>
                </div>
                <div class="form-field" tal:define="value None;oid 'status';name 'status'">
                    <div class="dl15">
                        <label i18n:translate="" for="${oid}">status</label>
                    </div>
                    <div class="ml15">
                        <metal:block metal:use-macro="fields.status"></metal:block>
                    </div>
                </div>
                <div class="form-buttons">
                    <div class="dl20 status-bar"></div>
                    <div class="ml20 tr button-group">
                        <input type="submit" class="button" name="save" value="Save" i18n:attributes="value"/>
                        <input type="reset" class="button danger" name="close" value="Close" i18n:attributes="value"/>
                    </div>
                </div>
            </form>
        </div>
    </tal:block>

    <tal:block metal:define-macro="edit">
        <div class="dl40 easyui-dialog"
            title="Edit Group"
            i18n:attributes="title"
            data-options="resizable:false,iconCls:'fa fa-pencil-square-o'">
            <form class="_ajax" tal:attributes="action request.url" method="post" autocomplete="off">
                <input type="hidden" name="rid" tal:attributes="value item.rid"/>
                <div class="form-field">
                    <div class="dl15">
                        <label class="required" i18n:translate="" for="name">name</label>
                    </div>
                    <div class="ml15">
                        <input type="text" name="name" class="text w20" value="" id="name" tal:attributes="value item.name"/>
                    </div>
                </div>
                <div class="form-field" tal:define="value item.resource.status;oid 'status';name 'status'">
                    <div class="dl15">
                        <label i18n:translate="" for="${oid}">status</label>
                    </div>
                    <div class="ml15">
                        <metal:block metal:use-macro="fields.status"></metal:block>
                    </div>
                </div>
                <div class="form-buttons">
                    <div class="dl20 status-bar"></div>
                    <div class="ml20 tr button-group">
                        <input type="submit" class="button" name="save" value="Save" i18n:attributes="value"/>
                        <input type="reset" class="button danger" name="close" value="Close" i18n:attributes="value"/>
                    </div>
                </div>
            </form>
        </div>
    </tal:block>

    <tal:block metal:define-macro="permissions">
        <div class="dl40 easyui-dialog"
            title="Group Permissions"
            i18n:attributes="title"
            data-options="resizable:false,iconCls:'fa fa-pencil-square-o'">
            <form class="_ajax" tal:attributes="action request.url" method="post" autocomplete="off">
                <input type="hidden" name="rid" tal:attributes="value item.rid"/>
                <div class="form-field">
                    <div class="dl15">
                        <label class="required" i18n:translate="" for="_resources_types_rid">resource type</label>
                    </div>
                    <div class="ml15" tal:define="value None;oid '_resources_types_rid';name '_resources_types_rid'">
                        <metal:block metal:use-macro="fields.resources_types"></metal:block>
                    </div>
                </div>
                <div class="form-field">
                    <div class="dl15">
                        <label i18n:translate="" for="permissions">permissions</label>
                    </div>
                    <div class="ml15">
                        <input name="permissions" class="text w20" id="permissions"/>
                    </div>
                </div>
                <div class="form-buttons">
                    <div class="dl20 status-bar"></div>
                    <div class="ml20 tr button-group">
                        <input type="submit" class="button" name="save" value="Save" i18n:attributes="value"/>
                        <input type="reset" class="button danger" name="close" value="Close" i18n:attributes="value"/>
                    </div>
                </div>
            </form>
        </div>
    </tal:block>

</html>
