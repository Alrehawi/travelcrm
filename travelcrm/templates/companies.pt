<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="travelcrm">

    <tal:block metal:define-macro="index">
        <div class="easyui-panel _container unselectable"
            data-options="fit:true,border:false,iconCls:'fa fa-table'"
            title="Companies"
            i18n:attributes="title"
            tal:define="
                url request.resource_url(context, 'list');
                uuid h.get_oid();
                id_datagrid uuid;
                id_datagrid_toolbar '{uuid}-toolbar'.format(uuid=uuid)">
            <table class="easyui-datagrid"
                tal:attributes="url url; id id_datagrid"
                data-options="
                    border:false,pagination:true,fit:true,pageSize:50,singleSelect:true,
                    rownumbers:true,sortName:'rid',sortOrder:'desc',
                    pageList:[50,100,500],idField:'_rid',checkOnSelect:false,
                    selectOnCheck:false,toolbar:'#${id_datagrid_toolbar}'
                " width="100%">
                <thead>
                    <th data-options="field:'_rid',checkbox:true" i18n:translate="">rid</th>
                    <th data-options="field:'rid',sortable:true,width:60" i18n:translate="">rid</th>
                    <th data-options="field:'company.name',sortable:true,width:300" i18n:translate="">name</th>
                    <th data-options="field:'structs.quan',sortable:true,width:50" i18n:translate="" align="center">structs</th>
                    <th data-options="field:'status',width:50,formatter:function(value,row,index){return datagrid_resource_status_format(value);},styler:function(){return datagrid_resource_cell_styler();}"><strong i18n:translate="">status</strong></th>
                    <th data-options="field:'modifydt',sortable:true,width:120,styler:function(){return datagrid_resource_cell_styler();}"><strong i18n:translate="">updated</strong></th>
                    <th data-options="field:'owner',width:100,styler:function(){return datagrid_resource_cell_styler();}"><strong i18n:translate="">owner</strong></th>
                </thead>
            </table>

            <div class="datagrid-toolbar"
                tal:attributes="id id_datagrid_toolbar">
                <div class="actions button-container">
                    <a href="#" class="button primary _dialog_open" tal:attributes="data-url request.resource_url(context, 'company', 'add')"><span class="fa fa-plus"></span> <span  i18n:translate="">Add Company</span></a>
                    <div class="button-group">
                        <a href="#" class="button _dialog_open _with_row" tal:attributes="data-url request.resource_url(context, 'company', 'edit')"><span class="fa fa-pencil"></span> <span  i18n:translate="">Edit</span></a>
                        <a href="#" class="button _dialog_open _with_row" tal:attributes="data-url request.resource_url(context, 'company', 'copy')"><span class="fa fa-copy"></span> <span  i18n:translate="">Copy</span></a>
                        <a href="#" class="button danger _dialog_open _with_rows" tal:attributes="data-url request.resource_url(context, 'delete')"><span class="fa fa-times"></span> <span  i18n:translate="">Delete</span></a>
                    </div>
                </div>
            </div>

        </div>
    </tal:block>

    <tal:block metal:define-macro="form">
        <div class="dl40 easyui-dialog"
            title="Add Company"
            tal:attributes="title title | default"
            i18n:attributes="title"
            data-options="modal:true,draggable:false,resizable:false,iconCls:'fa fa-pencil-square-o'">
            <form class="_ajax" tal:attributes="action request.url" method="post" autocomplete="off">
                <div class="form-field">
                    <div class="dl15">
                        <label class="required" i18n:translate="" for="name">name</label>
                    </div>
                    <div class="ml15">
                        <input type="text" name="name" class="text w20" value="" id="name" tal:attributes="value item.name | default"/>
                    </div>
                </div>
                <div class="form-field" tal:define="value item.resource_obj.status | default;oid 'status';name 'status'">
                    <div class="dl15">
                        <label i18n:translate="" for="${oid}">status</label>
                    </div>
                    <div class="ml15">
                        <metal:block metal:use-macro="fields.status"></metal:block>
                    </div>
                </div>
                <div class="form-buttons">
                    <div class="dl20 status-bar"></div>
                    <div class="ml20 tr button-group">
                        <input type="submit" class="button" name="save" value="Save" i18n:attributes="value"/>
                        <input type="reset" class="button danger" name="cancel" value="Cancel" i18n:attributes="value"/>
                    </div>
                </div>
            </form>
        </div>
    </tal:block>

    <tal:block metal:define-macro="delete">
        <div class="dl40 easyui-dialog"
            title="Delete Resources Types"
            i18n:attributes="title"
            data-options="modal:true,draggable:false,resizable:false,iconCls:'fa fa-pencil-square-o'">
            <form class="_ajax" tal:attributes="action request.resource_url(context, 'delete')" method="post" autocomplete="off">
                <input type="hidden" tal:repeat="rid request.params.get('rid').split(',')" tal:attributes="name 'rid'; value rid"/>
                <div class="p1">
                    <div class="mb1">
                        <i class="fa fa-info-circle fa-lg"></i> <span i18n:translate="">Do you realy want to delete checked items?</span>
                    </div>
                    <div>
                        <span class="lipstick" i18n:translate="">ATTENTION:</span> 
                        <span i18n:translate="">
                            this operation may cause destructive system changes, use it if you understand what are you doing!
                        </span>
                    </div>
                </div>
                <div class="form-buttons">
                    <div class="dl20 status-bar"></div>
                    <div class="ml20 tr button-group">
                        <input type="submit" class="button" name="save" value="Delete" i18n:attributes="value"/>
                        <input type="reset" class="button danger" name="cancel" value="Cancel" i18n:attributes="value"/>
                    </div>
                </div>
            </form>
        </div>
    </tal:block>

</html>
